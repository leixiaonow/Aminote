<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/abstract_note_activity_root_bg_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
